!!! 5
%html
  %head
    %title title
    -# Stylesheets
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/colorbox.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    -# Javascript
    = javascript_include_tag :defaults
    = javascript_include_tag 'colorbox/jquery.colorbox.js'
    = csrf_meta_tag
  %body
    #header.container
      #logo
        %h1
          = link_to 'Boot huren Amsterdam.com', :root
    #topmenu.container
    #menu.container    
      %ul
        %li= link_to 'Home', :root
        %li= link_to 'All boats', :boats
        %li= link_to 'Getting married', :married
        %li asdf
        %li asdf
        %li asdf
        %li asdf
        %li asfd
    #page.container
      - if notice
        .notice
          =notice
      - if alert
        .error
          =alert
      = yield
    
    #footer
      .container
        %p.legal asdf
        %p.links
